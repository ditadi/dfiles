{
  "name": "dfiles",
  "displayName": "dFiles",
  "description": "Emacs/Doom-style file navigation for VS Code and Cursor",
  "version": "0.1.0",
  "publisher": "ditadi",
  "author": {
    "name": "Victor Ditadi",
    "url": "https://ditadi.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ditadi/dfiles"
  },
  "bugs": {
    "url": "https://github.com/ditadi/dfiles/issues"
  },
  "homepage": "https://github.com/ditadi/dfiles#readme",
  "keywords": [
    "emacs",
    "doom",
    "dired",
    "file-manager",
    "keyboard",
    "spacemacs",
    "vim",
    "neovim"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dfiles.findFile",
        "title": "dFiles: Find File"
      },
      {
        "command": "dfiles.findFile.delete",
        "title": "dFiles: Delete Selected"
      },
      {
        "command": "dfiles.findFile.rename",
        "title": "dFiles: Rename Selected"
      },
      {
        "command": "dfiles.findFile.copyPath",
        "title": "dFiles: Copy Path"
      },
      {
        "command": "dfiles.recentFiles",
        "title": "dFiles: Find Recent"
      },
      {
        "command": "dfiles.recentFiles.clear",
        "title": "dFiles: Clear Recent History"
      },
      {
        "command": "dfiles.projectFiles",
        "title": "dFiles: Find Project Files"
      },
      {
        "command": "dfiles.searchProject",
        "title": "dFiles: Search in Project"
      }
    ],
"configuration": {
      "title": "dFiles",
      "properties": {
        "dfiles.projectFiles.maxFiles": {
          "type": "number",
          "default": 5000,
          "description": "Maximum number of files to index for project file search"
        },
        "dfiles.search.maxFiles": {
          "type": "number",
          "default": 5000,
          "description": "Maximum number of files to search"
        },
        "dfiles.search.maxFileSize": {
          "type": "number",
          "default": 524288,
          "description": "Maximum file size in bytes to search (default 512KB)"
        },
        "dfiles.search.debounceTime": {
          "type": "number",
          "default": 150,
          "description": "Debounce time in milliseconds for reactive search"
        },
        "dfiles.search.maxResults": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of search results"
        },
        "dfiles.search.maxMatchesPerFile": {
          "type": "number",
          "default": 10,
          "description": "Maximum matches per file in search results"
        },
        "dfiles.recent.maxEntries": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of recent file entries to keep"
        }
      }
    },
    "keybindings": [
      {
        "command": "dfiles.findFile",
        "key": "space f d",
        "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert' && vim.mode != 'Replace'"
      },
      {
        "command": "dfiles.findFile",
        "key": "space f d",
        "when": "!editorFocus"
      },
      {
        "command": "dfiles.recentFiles",
        "key": "space f r",
        "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert' && vim.mode != 'Replace'"
      },
      {
        "command": "dfiles.recentFiles",
        "key": "space f r",
        "when": "!editorFocus"
      },
      {
        "command": "dfiles.projectFiles",
        "key": "space f p",
        "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert' && vim.mode != 'Replace'"
      },
      {
        "command": "dfiles.projectFiles",
        "key": "space f p",
        "when": "!editorFocus"
      },
      {
        "command": "dfiles.searchProject",
        "key": "space f s",
        "when": "editorTextFocus && !editorReadonly && vim.mode != 'Insert' && vim.mode != 'Replace'"
      },
      {
        "command": "dfiles.searchProject",
        "key": "space f s",
        "when": "!editorFocus"
      },
      {
        "command": "dfiles.findFile.delete",
        "key": "ctrl+d",
        "when": "inQuickOpen"
      },
      {
        "command": "dfiles.findFile.rename",
        "key": "ctrl+r",
        "when": "inQuickOpen"
      },
      {
        "command": "dfiles.findFile.copyPath",
        "key": "ctrl+y",
        "when": "inQuickOpen"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "biome lint src",
    "lint:fix": "biome lint src --write",
    "format": "biome format src --write",
    "format:check": "biome format src",
    "check": "biome check src",
    "check:fix": "biome check src --write",
    "package": "vsce package",
    "prepublishOnly": "npm run compile",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.22.0",
    "husky": "^9.0.0",
    "typescript": "^5.3.0"
  }
}
